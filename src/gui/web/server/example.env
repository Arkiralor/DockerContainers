# Server Configuration
# Port the server will listen on
PORT=5001

# CORS Configuration
# URL of the client application for CORS settings
CLIENT_URL="http://localhost:3000"

# Logging Configuration
# Log level: error, warn, info, debug
LOG_LEVEL="info"

# Environment
# Application environment: development, production
NODE_ENV="development"

# Repository Root
# Absolute path to the repository root directory where make commands are executed.
# If not set, will be calculated automatically from the server file location.
# Only set this if the automatic calculation is incorrect for your setup.
# REPO_ROOT="/absolute/path/to/DockerContainers"
