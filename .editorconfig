# EditorConfig helps maintain consistent coding styles
# Root EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# YAML files (Docker Compose, configs)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefile
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# Configuration files
[*.{conf,config,cfg}]
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Environment files
[.env*]
insert_final_newline = false
